<?php

// use app\controllers\user\user\LeonEvent;

class MemberController extends CommonController
{

    protected $layout = 'layouts.member.index';


    protected function setupLayout()
    {
        if (!is_null($this->layout)) {
            $this->layout = View::make($this->layout);
        }
    }

    public function view($path, $data = [])
    {
        $this->layout->content = View::make($path, $data);
    }


    public function __construct()
    {
        parent::__construct();
    }

    /**
     * 欢迎页
     */
    function index()
    {
        $userinfo  =  Session::get('member');
        return $this->view('member.welc',compact('userinfo'));
    }

     /**
     * 注册
     */
    function register()
    {
         return view::make('member.register');
    }


    /**
     * @return mixed
     * 判断注册成功 存储信息
     */
    function store()
    {
        $input = Input::all();
        if(Input::get('_token') != csrf_token()){
           return Redirect::back()->with('msg', '表单验证失败');
        }
        $res = User::checkName($input['name']);
        if ($res) {
            $err= '该用户名已被占用！';
            return Redirect::back()->with('msg', $err)->withInput();
        }
        $res = isset($input['aggree'])=="on"?$input['aggree']:false ;
        if (!$res) {
            $err = '用户协议必须同意！';
            return Redirect::back()->with('msg', $err)->withInput();
        }
        //check if the $input data is legal
        $res = User::validatorUser($input);
        if(!$res){
            return Redirect::back()->with('msg','表单验证失败')->withInput();
        }
        User::addUser($input);
        return Redirect::to('member/login');

    }


    function login()
    {

        if (isset(Session::get('member')->id)) {
            return Redirect::to('member');
        }
        return $this->view('member.login');
    }

    /**
     * @return mixed
     * 判断登录
     */
    function loginVerify()
    {


        $username = Input::get('name');
        $password = Input::get('password');
        $res = User::login($username, $password);

        if ($res) {

            //更新上次登录时间
            $user = User::getUserByName(Input::get('name'))->first();

            $user->update(array('last_time' => date('Y-m-d h:m:s')));


            // 存入session
            Session::put('member', $user);
//            dd(Session::get('member')->id);
            return Redirect::to('member');
        }
        return Redirect::back()->with('msg', 'failed to login')->withInput();

    }

    function quit()
    {
        Session::forget('member');
        return Redirect::to('member/login');
    }


}
